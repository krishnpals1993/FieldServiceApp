@using Microsoft.Extensions.Options;
@using Newtonsoft.Json;
@model LaCafelogy.Models.ItemGroupViewModel
@inject IOptions<Appsettings> Settings
@{

    ViewData["Title"] = "Edit Item Group";
    List<string> CheckboxSelectionList = new List<string>();
    CheckboxSelectionList.Add("Y");
    CheckboxSelectionList.Add("N");
}
<div role="main" class="page-content container container-plus">
    <div class="card bcard mt-2 mt-lg-3">
        <div class="card-header">
            <h3 class="card-title text-125">
                Edit Item Group
            </h3>
        </div>

        <div class="card-body px-3 pb-1">
            <form class="mt-lg-3" enctype="multipart/form-data" autocomplete="off" novalidate
                  action="@Settings.Value.WebBaseURL/Inventory/EditItemGroup" method="post">

                @Html.HiddenFor(h=>h.GroupId)

                <div class="form-group row">
                    <div class="col-sm-2 col-form-label text-sm-right pr-0">
                        <label for="id-form-field-1" class="mb-0">
                            Group Name
                        </label>
                    </div>

                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.GroupName,
                        new { @placeholder = "Enter new GroupName", @class = "form-control", maxlength = "200" })
                        <span asp-validation-for="GroupName" class="text-danger"></span>
                    </div>

                    <div class="col-sm-2 col-form-label text-sm-right pr-0">
                        <label for="id-form-field-1" class="mb-0">
                            Group Image
                        </label>
                       
                    </div>
                    <div class="col-sm-3">
                        <img src="~/images/@Model.ImageName" height="50px" width="50px" asp-append-version="true" />

                        <div class="custom-file">
                            <input asp-for="GroupImageName" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <span asp-validation-for="GroupImageName" class="text-danger"></span>
                    </div>
                    <p class="text-danger">
                        @ViewBag.ErrorMessage
                    </p>

                </div>

                <div class="mt-5 border-t-1 brc-secondary-l2 py-35 mx-n25">
                    <div class="offset-md-3 col-md-9 text-nowrap">
                        <button class="btn btn-info btn-bold px-4" type="submit">
                            <i class="fa fa-check mr-1"></i>
                            Submit
                        </button>

                        <a href="~/Inventory/ItemGroupList" class="btn btn-outline-lightgrey btn-bold ml-2 px-4" type="reset">
                            <i class="fa fa-undo mr-1"></i>
                            Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>




@section Styles {
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap-datepicker/bootstrap-datetimepicker.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-datepicker/tiny-date-picker.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-datepicker/date-range-picker.css" />
    </environment>
    <style>
        hr {
            /*margin-bottom: 2rem !important;*/
        }
    </style>
}

@section scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <environment names="Development,Staging,Production">
        <script src="~/lib/moment/moment.js"></script>
        <script src="~/lib/bootstrap-datepicker/bootstrap-datetimepicker.js"></script>
        <script src="~/lib/bootstrap-datepicker/date-range-picker.js"></script>
        <script src="~/pages/form-basic/@@page-script.js"></script>
    </environment>
    <script type="text/javascript">

        $(document).ready(function () {


            var SuccessMessage = '@ViewBag.SuccessMessage';
            var ErrorMessage = '@ViewBag.ErrorMessage';
            if (SuccessMessage) {
                swal(SuccessMessage, "", "success");
                setTimeout(function () { window.location.href = "@Settings.Value.WebBaseURL/Inventory/ItemGroupList"; }, 750);

            }
            if (ErrorMessage) {
                swal(ErrorMessage, "", "error");
            }

            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });

        })
    </script>
}