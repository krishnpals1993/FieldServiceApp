                            </div>

                            <div class="col-sm-3">
                                @Html.TextBoxFor(m => m.CustomerDetail.Zip2,
                                new { @placeholder = "Zip 2", @class = "form-control" })
                                <span asp-validation-for="CustomerDetail.Zip2" class="text-danger"></span>
                            </div>


                        </div>


